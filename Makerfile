install:
	pip install --upgrade pip &&\
		pip install -r requirements.txt

test:
	pip install pytest pytest-cov
	python -m pytest -vv --cov=main test_*.py

format:	
	pip install black
	black .

lint:
	pip install pylint
	pylint --disable=R,C --ignore-patterns=test_.*?py *.py

deploy:
	# deploy goes here
		
all: install lint test format deploy